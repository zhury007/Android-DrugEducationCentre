<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_tile3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:text="Other Reason"
                android:textColor="#EBF350"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/second_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="Mixing ecstasy with other drugs"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="120dp" />

            <TextView
                android:id="@+id/fg3_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="The effects of taking ecstasy with other drugs − including over-the-counter or prescribed medications −can be unpredictable and dangerous, and could cause:"
                android:textSize="16dp"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="180dp" />

            <TextView
                android:id="@+id/fg3_content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Content3"
                android:textColor="@android:color/background_light"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="180dp" />

            <TextView
                android:id="@+id/third_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="Withdrawal"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="233dp" />

            <TextView
                android:id="@+id/fg3_content4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="content3"
                android:textSize="17sp"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="300dp" />

            <TextView
                android:id="@+id/fourth_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driving"
                android:background="@drawable/btn_shape"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/fg3_content5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="17sp"
                android:textColor="@android:color/background_light"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>